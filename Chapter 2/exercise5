import java.util.Scanner;  
  
public class exercise5 {  
  
    public static void main(String[] args) {  
        // Create a Scanner object to retrieve user input from the console  
        Scanner scanner = new Scanner(System.in);  
  
        // Prompt the user to input the side length of the hexagon  
        System.out.print("Please enter the side length of the hexagon: ");  
        double sideLength = scanner.nextDouble();  
  
        // Calculate the area of a hexagon  
        double area = (3 * Math.sqrt(3) / 2) * Math.pow(sideLength, 2);  
  
        // Display the area of a hexagon  
        System.out.printf("The area of a hexagon is: %.2f\n", area);  
  
        // Close Scanner Object  
        scanner.close();  
    }  
}
