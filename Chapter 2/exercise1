import java.util.Scanner;  
  
public class exercise1 {  
  
    public static void main(String[] args) {  
        // Create a Scanner object to read input from the console  
        Scanner scanner = new Scanner(System.in);  
  
        // Prompt the user for the radius of the circle and the length of the cylinder
        System.out.print("Please enter the radius and length of the cylinder: ");  
        double radius = scanner.nextDouble();  
        double length = scanner.nextDouble();  
  
        // Calculate the area of the circle (formula: area=Ï€ * radius ^ 2)  
        double circleArea = Math.PI * Math.pow(radius, 2);  
  
        // Calculate the volume of the cylinder (formula: volume=area of the circle * length)  
        double cylinderVolume = circleArea * length;  
  
        // Output results  
        System.out.printf("The area of the circle is: %.2f\n", circleArea);  
        System.out.printf("The volume of the cylinder is: %.2f\n", cylinderVolume);  
  
        // Close Scanner Object  
        scanner.close();  
    }  
}
